<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:background="@drawable/bg"
  android:layout_height="fill_parent">
    <AbsoluteLayout android:id="@+id/absoluteLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <EditText android:layout_height="wrap_content" android:hint="name" android:inputType="textPersonName" android:layout_x="5dp" android:layout_y="64dp" android:layout_width="301dp" android:id="@+id/nameReg">
            <requestFocus></requestFocus>
        </EditText>
        <EditText android:layout_height="wrap_content" android:hint="email" android:layout_width="299dp" android:inputType="textEmailAddress" android:layout_x="6dp" android:layout_y="110dp" android:id="@+id/emailReg"></EditText>
        <Button android:text="Register" android:layout_height="46dp" android:id="@+id/registerReg" android:layout_width="113dp" android:layout_x="186dp" android:layout_y="371dp"></Button>
        <EditText android:inputType="phone" android:layout_height="wrap_content" android:hint="phone number" android:id="@+id/phoneReg" android:layout_width="298dp" android:layout_x="7dp" android:layout_y="203dp"></EditText>
        <EditText android:inputType="textPassword" android:layout_height="wrap_content" android:hint="password" android:id="@+id/passwordReg" android:layout_width="297dp" android:layout_x="6dp" android:layout_y="250dp"></EditText>
        <EditText android:inputType="textPassword" android:layout_height="wrap_content" android:hint="conform password" android:id="@+id/conformpassReg" android:layout_width="298dp" android:layout_x="5dp" android:layout_y="303dp"></EditText>

        <Spinner
            android:id="@+id/spinnerReg"
            android:layout_width="204dp"
            android:layout_height="48dp"
            android:layout_x="97dp"
            android:layout_y="154dp"
            android:entries="@array/login" >
</Spinner>
        <TextView android:text="Signup as" android:layout_height="wrap_content" android:id="@+id/textView2" android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#000000" android:layout_width="wrap_content" android:layout_x="13dp" android:layout_y="160dp"></TextView>
        <TextView android:text="Register" android:layout_height="wrap_content" android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#000000" android:layout_width="wrap_content" android:layout_x="117dp" android:layout_y="15dp"></TextView>

    </AbsoluteLayout>
    
</LinearLayout>
